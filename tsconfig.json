
  {
    "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2015",
        "es2015.promise",
        "es2015.generator",
        "es2015.collection",
        "es2015.core",
        "es2015.reflect",
        "es2016",
        "dom"
      ],
      "types": [
        "node"
      ],
      "outDir": "dist"
    },
    "include": [
      "src/"
    ]
  }

  